<Window x:Class="ThmTPWin.Views.InstrumentSelectionWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThmTPWin.Views"
        mc:Ignorable="d" ResizeMode="NoResize" Title="Instrument Selection"
        Height="305" Width="520" WindowStartupLocation="CenterOwner" >
    <StackPanel Margin="5 0">
        <local:InstrumentSelectionUsrCtrl x:Name="InstrumentSelection" Margin="3" Height="220" />
        
        <StackPanel Orientation="Horizontal" Margin="3" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Height="25" Margin="2" Click="CancelButton_Click" Style="{StaticResource CstButton}"/>
            <Button Content="Select" Width="80" Height="25" Margin="2" Click="SelectButton_Click" Style="{StaticResource CstButton}" />
        </StackPanel>
    </StackPanel>
</Window>
